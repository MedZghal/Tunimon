<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:state_pressed="false">

        <shape  android:shape="rectangle">
            <corners android:radius="50dp"/>
            <gradient
                android:centerColor="@color/colorPrimary"
                android:centerX="50%"
                android:centerY="50%"
                android:endColor="@color/colorPrimary"
                android:gradientRadius="100"
                android:startColor="@color/colorPrimary"
                android:type="radial"
                />
            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp"
                />
            <size
                android:width="300dp"
                android:height="61dp"/>
            <stroke
                android:width="0dp"
                android:color="#00CCB9"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape  android:shape="rectangle">
            <corners android:radius="50dp"/>
            <gradient
                android:centerColor="#1B96C1"
                android:centerX="50%"
                android:centerY="50%"
                android:endColor="#1B96C1"
                android:gradientRadius="100"
                android:startColor="#1B96C1"
                android:type="radial"
                />
            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp"
                />
            <size
                android:width="250dp"
                android:height="61dp"/>
            <stroke
                android:width="0dp"
                android:color="#00CCB9"/>
        </shape>
    </item>

</selector>
