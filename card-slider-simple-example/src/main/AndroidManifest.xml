<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ramotion.cardslider.examples.simple">

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_tunimon1"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@drawable/logo_tunimon1"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".InteractionActivity" />
        <activity android:name=".Location.LocationActivity" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DetailsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".detection.DetectorActivity"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>